        <link rel="icon" type="image/x-icon" href="/css/logo/favicon.ico">
        <link rel="stylesheet" type="text/css" href="/css/navbar.css"> <!-- navbar css link-->
        <link rel="stylesheet" type="text/css" href="/css/footer.css"> <!-- footer css link-->
        <link rel="stylesheet" type="text/css" href="/css/coordinator_login.css">

        <!-- ICONS link-->
