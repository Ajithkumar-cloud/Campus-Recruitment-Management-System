    <body style="background-color: rgba(226, 232, 232, 0.753);">

         <!-- nav bar starting -->
        {{> navbar }}
   
        <!-- nav bar ending with campus picture-->

        <!-- coordinator login page start -->
        
        <div class="top">
            <div class="heading">   
                <h3>COORDINATOR LOGIN</h3>
                {{#if msg}}
                <span class="{{msg_type}}">{{msg}}</span>
                {{/if}}
            </div>
            <div class="mid-form">
                <form action="/auth/coordinator_login" method="POST">
                    <label class="regtext">Enter Your Id: *</label>
                    <div class="input-field">
                        <i class="fa-regular fa-id-card"></i>
                        <input type="text" name="co_regno">
                    </div>
                     <div class="ey-icon">
                          <label class="passtext">Enter Your Password: *</label>
                          <i id="access" class="fa-solid fa-eye-slash" ></i>
                     </div>
                    <div class="input-field">
                        <i class="fa-solid fa-lock"></i>
                        <input type="password" name="password" id="password">
                    </div>
                    <label class="selecttext">Select Your Department: *</label>
                    <div class="select-field">
                        <select name="dep">
                            <option selected disabled hidden><label>Choose your dep</label></option>
                            <option name="CSE"value="1"><label>CSE</label></option>
                            <option name="ECE"value="3"><label>ECE</label></option>
                            <option name="IT"value="2"><label>IT</label></option>
                            <option name="BIO"value="4"><label>BIO</label></option>
                            <option name="MECH"value="5"><label>MECH</label></option>  
                            <option name="CIVIL"value="6"><label>CIVIL</label></option>           
                        </select>
                    </div>
                    <div class="button-field">
                        <button type="submit">Login</button>
                    </div>

                </form>
            </div>
        </div>

        <!-- coordinator login page end -->

        <!-- footer page starting -->
        <footer class="foot">
